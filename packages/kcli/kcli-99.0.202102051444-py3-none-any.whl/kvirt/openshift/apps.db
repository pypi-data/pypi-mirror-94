$ORIGIN apps.{{ cluster }}.{{ domain }}.
$TTL 10800      ; 3 hours
@       3600 IN SOA sns.dns.icann.org. noc.dns.icann.org. (
                                2019010101 ; serial
                                7200       ; refresh (2 hours)
                                3600       ; retry (1 hour)
                                1209600    ; expire (2 weeks)
                                3600       ; minimum (1 hour)
                                )

$ORIGIN apps.{{ cluster }}.{{ domain }}.
*                                                      {{ 'AAAA' if ipv6 else 'A' }}                {{ ingress_ip if ingress_ip != None else api_ip }}
