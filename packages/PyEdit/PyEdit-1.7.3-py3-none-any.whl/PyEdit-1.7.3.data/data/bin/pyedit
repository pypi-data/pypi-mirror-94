#! /usr/bin/env python
import os, sys

fd = "/".join(__file__.replace(".","").split("/")[:-1])

fd = os.getcwd() + fd.replace(os.getcwd(), "")
vs = sys.version_info
comm = f"gcc -Os -I /usr/include/python{vs.major}.{vs.minor} PyEdit.c -lpython{vs.major}.{vs.minor}m -o pyedit"
os.chdir(fd)
os.remove(__file__.split("/")[-1])
os.system(comm)
os.system("./pyedit")