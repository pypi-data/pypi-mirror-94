[Unit]
Description=DistKV WAGO server
After=distkv.service
Requires=distkv.service

ConditionFileNotEmpty=/etc/distkv.cfg

[Install]
WantedBy=multi-user.target

[Service]
Type=notify
ExecStart=/usr/bin/distkv client wago monitor %I

EnvironmentFile=/etc/distkv.env

TimeoutSec=300
WatchdogSec=10

Restart=always
RestartSec=30
