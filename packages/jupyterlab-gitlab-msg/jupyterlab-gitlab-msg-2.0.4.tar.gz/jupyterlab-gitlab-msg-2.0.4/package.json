{
  "name": "@enki-portal/jupyterlab-gitlab",
  "version": "2.0.4",
  "description": "JupyterLab viewer for GitLab repositories",
  "keywords": [
    "gitlab",
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "homepage": "https://gitlab.com/enki-portal/jupyterlab-gitlab",
  "bugs": {
    "url": "https://gitlab.com/enki-portal/jupyterlab-gitlab/issues"
  },
  "license": "BSD-3-Clause",
  "author": "Benjamin Bertrand",
  "files": [
    "lib/*/*d.ts",
    "lib/*/*.js",
    "lib/*.d.ts",
    "lib/*.js",
    "schema/*.json",
    "style/*.*",
    "style/index.js"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib/"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/enki-portal/jupyterlab-gitlab"
  },
  "scripts": {
    "build": "jlpm run build:lib && jlpm run build:labextension:dev",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "build:lib": "tsc",
    "build:prod": "jlpm run build:lib && jlpm run build:labextension",
    "build:test": "cd test && ./build-tests.sh",
    "clean": "jlpm run clean:lib",
    "clean:all": "jlpm run clean:lib && jlpm run clean:labextension",
    "clean:labextension": "rimraf jupyterlab-gitlab-msg/labextension",
    "clean:lib": "rimraf lib tsconfig.tsbuildinfo",
    "eslint": "eslint . --ext .ts,.tsx --fix",
    "eslint:check": "eslint . --ext .ts,.tsx",
    "install:extension": "jupyter labextension develop --overwrite .",
    "precommit": "lint-staged",
    "prepare": "jlpm run clean && jlpm run build:prod",
    "prettier": "prettier --write '**/*{.ts,.tsx,.js,.jsx,.css,.json,.md}'",
    "test": "cd test && ./run-tests.sh",
    "watch": "run-p watch:src watch:labextension",
    "watch:labextension": "jupyter labextension watch .",
    "watch:src": "tsc -w"
  },
  "dependencies": {
    "@jupyterlab/application": "^3.0.4",
    "@jupyterlab/apputils": "^3.0.3",
    "@jupyterlab/coreutils": "^5.0.2",
    "@jupyterlab/docmanager": "^3.0.4",
    "@jupyterlab/docregistry": "^3.0.4",
    "@jupyterlab/filebrowser": "^3.0.4",
    "@jupyterlab/services": "^6.0.3",
    "@jupyterlab/settingregistry": "^3.0.2",
    "@jupyterlab/ui-components": "^3.0.3",
    "@lumino/messaging": "^1.4.3",
    "@lumino/signaling": "^1.4.3",
    "@lumino/widgets": "^1.16.1",
    "base64-js": "^1.3.0"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3.0.0",
    "@types/base64-js": "^1.2.5",
    "@types/text-encoding": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "mkdirp": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~4.1.3"
  },
  "lint-staged": {
    "**/*{.ts,.tsx,.css,.json,.md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jupyterlab": {
    "extension": true,
    "discovery": {
      "server": {
        "managers": [
          "pip"
        ],
        "base": {
          "name": "jupyterlab_gitlab"
        }
      }
    },
    "schemaDir": "schema",
    "outputDir": "jupyterlab-gitlab-msg/labextension"
  },
  "styleModule": "style/index.js"
}