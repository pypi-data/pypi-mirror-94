      }
    },
    "ports_object": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[0-9]+$"
      },
      "patternProperties": {
        "^[0-9]+$": {
          "oneOf": [
            {
              "type": ["integer", "string", "array", "null"],
              "items": {
                "type": ["integer", "string"],
                "pattern": "^(([0-9]{1,3}[\\.]){3}[0-9]{1,3}:)?[0-9]+$"
              },
              "pattern": "^(([0-9]{1,3}[\\.]){3}[0-9]{1,3}:)?[0-9]+$"
            },
