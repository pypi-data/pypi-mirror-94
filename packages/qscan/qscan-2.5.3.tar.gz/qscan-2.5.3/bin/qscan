#!/usr/bin/env python
import qscan
from qscan import *
print('\nQSCAN v.%s\n'%qscan.__version__)
# Initialise figure
setup.fig = figure(figsize=(12,8))
subplots_adjust(left=0.15,right=0.95,bottom=0.05,top=0.92,hspace=0,wspace=0.07)
# Define primary lists
if setup.fort!=None: readfort13()
setup.atomlist  = setup.metallist
setup.atomreg   = setup.metalreg
setup.atomvoigt = setup.metalvoigt
setup.qsoname   = sys.argv[1].split('/')[-1].split('.')[0]
# Initialise and display interface
print('-------------------------------------------------------')
print('    Scan spectrum',setup.qsoname,' | z=%.5f'%setup.zabs)
print('-------------------------------------------------------')
readspec(sys.argv[1])
gothrough()
#fig.canvas.mpl_connect('button_press_event', onclick)
setup.fig.canvas.mpl_connect('key_press_event', press)
show()
